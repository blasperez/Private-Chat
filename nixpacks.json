{
  "providers": ["node"],
  "buildPlan": {
    "phases": {
      "setup": {
        "nixPkgs": ["nodejs_20", "npm-9_x"]
      },
      "install": {
        "cmds": ["npm ci --omit=dev"]
      },
      "build": {
        "cmds": ["npm run build"]
      }
    }
  },
  "start": {
    "cmd": "npx vite preview --port ${PORT:-3000} --host 0.0.0.0"
  }
}